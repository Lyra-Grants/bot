  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "sourceMap": true,
    "outDir": "dist/esm",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"]
}
